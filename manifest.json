{
	"manifest_version": 2,

	"name": "albert",
	"description": "The accessibility tool for people with Dyslexia.",
	"version": "0.2",

	"browser_action": {
		"default_title": "albert",
		"default_icon": "icon-disabled.png",
		"default_popup": "temp.html"
	},
	"minimum_chrome_version": "14",
	"background": {
		"scripts": ["keycodes.js",
					"tabs.js",
					"background.js"]
	},
	
	"content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "all_frames": true,
      "js": [
        "keycodes.js",
        "content_script.js"
      ]
    }
  ],
	
	"options_page": "customize.html",

	"permissions": [
		"tabs",
		"activeTab",
		"<all_urls>",
		"tts",
		"tabs",
		"storage",
		"http://*/*",
		"https://*/*"
	],

	"icons": {
		"16": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	}
}
